<Window x:Class="ExamineRoutedEvents.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExamineRoutedEvents"
        mc:Ignorable="d" Name="win"
        Title="MainWindow" Height="450" Width="800">
    <Grid x:Name="root">
        <Grid.RowDefinitions>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="60*"/>
            <RowDefinition Height="300*"/>
        </Grid.RowDefinitions>
        <Button x:Name="btn" Content="按下键盘按键或者单击鼠标了解路由事件参数的含义"
                FontSize="18" Grid.Row="0" Margin="150,10"/>
        <TextBlock Grid.Row="1" Name="textHeadings" FontFamily="Cascadia Code"
                   HorizontalAlignment="Center" FontSize="15"/>
        <ScrollViewer Height="300" Grid.Row="2" FontSize="15">
            <StackPanel Name="stackOutput"/>
        </ScrollViewer>
    </Grid>
</Window>
