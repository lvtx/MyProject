<Window x:Class="Bubbled.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bubbled"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="200"/>
            <RowDefinition Height="300"/>
        </Grid.RowDefinitions>
        
        <DockPanel HorizontalAlignment="Center" VerticalAlignment="Top"  Margin="20" ButtonBase.Click="DockPanel_Click">
            <Button Height="150" Width="150">
                <Image Source="/MyWpfLibrary;component/Images/happyface.png" Height="100" Width="100"/>
            </Button>
        </DockPanel>

        <Grid Grid.Row="1">
            <StackPanel>
                <!--<TextBox x:Name="personNameTextBox" Text="{Binding Path=Name}"/>-->

            </StackPanel>
        </Grid>

    </Grid>
</Window>
