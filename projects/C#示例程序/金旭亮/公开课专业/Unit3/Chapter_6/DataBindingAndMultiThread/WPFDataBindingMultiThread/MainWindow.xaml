<Window x:Class="WPFDataBindingMultiThread.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WPF数据绑定的多线程特性" SizeToContent="Height" Width="325">
    <StackPanel Margin="10">
        <TextBlock x:Name="tbTest" Margin="5" Text="{Binding Information}"></TextBlock>
        <Button Margin="5" Padding="5" x:Name="btnChange" Click="btnChange_Click" 
                Content="使用代码修改数据源"/>
    </StackPanel>
</Window>
