<Window x:Class="AttachedEvents.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="附加事件示例" Height="300" Width="300">
    <Grid Margin="10" ButtonBase.Click="GridButton_Click">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <Button Grid.Row="0" x:Name="button1" Margin="10">Button 1</Button>
         <Button Grid.Row="1" x:Name="button2" Margin="10">Button 2</Button>
          <Button Grid.Row="2" x:Name="button3" Margin="10">Button 3</Button>
     
    </Grid>
</Window>
