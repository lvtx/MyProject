<Window x:Class="StaticResource.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="WPF中的静态资源" Height="110" Width="300">
    <Window.Resources>
        <LinearGradientBrush x:Key="backgroundBrush">
            <GradientStop Offset="0" Color="LightBlue"/>
            <GradientStop Offset="0.4" Color="Blue"/>
            <GradientStop Offset="0.8" Color="Purple"/>
            <GradientStop Offset="1.0" Color="Lavender"/>
        </LinearGradientBrush>

    </Window.Resources>

    <StackPanel Margin="10">
        <Button Height="32" Margin="10" Background="{StaticResource backgroundBrush}" Foreground="White" >Button</Button>
    </StackPanel>
</Window>
