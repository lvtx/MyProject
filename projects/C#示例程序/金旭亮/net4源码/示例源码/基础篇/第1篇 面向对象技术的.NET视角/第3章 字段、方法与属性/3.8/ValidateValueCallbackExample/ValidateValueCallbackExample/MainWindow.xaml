<Window x:Class="ValidateValueCallbackExample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ValidateValueCallback示例" Height="150" Width="300">
    <StackPanel Margin="10">
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="输入一个正整数：" Margin="10"></TextBlock>
            <TextBox Width="100" Name="txtNum" Margin="10"></TextBox>           
        </StackPanel>
        <Button Name="btnOK" Click="btnOK_Click" Content="确定" HorizontalAlignment="Right" Padding="5" Margin="10"></Button>
        
        <DockPanel>
            <TextBlock DockPanel.Dock="Top" Text="Hello"/>
        </DockPanel>
    </StackPanel>
</Window>
