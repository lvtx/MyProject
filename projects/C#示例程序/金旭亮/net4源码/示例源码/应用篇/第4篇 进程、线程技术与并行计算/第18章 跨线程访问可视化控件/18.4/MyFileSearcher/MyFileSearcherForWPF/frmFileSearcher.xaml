<Window x:Class="MyFileSearcherForWPF.frmFileSearcher"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="文件搜索" Height="300" Width="300" Loaded="Window_Loaded" Closing="Window_Closing">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="200*"/>
            <RowDefinition Height="35*"/>
            <RowDefinition Height="40*"/>
        </Grid.RowDefinitions>
        <TextBlock Name="txtInfo" Text="正在搜索..." Grid.Row="0" Margin="10"/>
        <ListBox Name="lstFiles" Grid.Row="1" HorizontalAlignment="Stretch" Margin="10" />
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="2">
            <Button Margin="5" Content="重新开始搜索" Name="btnBeginSearch" Click="btnBeginSearch_Click"/>
            <Button Margin="5" Content="取消" Name="btnCancel" Click="btnCancel_Click"/>
            <Button Margin="5" Content="关闭" Name="btnClose" Click="btnClose_Click"/>
            
        </StackPanel>
          <TextBlock Name="txtInfo2" Text="点击“取消”按钮停止查找" Grid.Row="3" Margin="10"/>
      
    </Grid>
</Window>
