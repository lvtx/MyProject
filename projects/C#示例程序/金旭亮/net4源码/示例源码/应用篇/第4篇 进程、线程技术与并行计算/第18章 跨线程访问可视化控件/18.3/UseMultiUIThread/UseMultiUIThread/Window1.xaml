<Window x:Class="UseMultiUIThread.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="创建多个UI线程" SizeToContent="Height" Width="300" Closing="Window_Closing">
    <StackPanel Margin="10">
        <CheckBox Content="关闭主窗体时同步关闭从窗体" Name="chkCloseOtherWindow" IsChecked="True" Margin="10"/>
        <Button Content="在新线程中显示窗体" Name="btnNewWindow" Margin="10" Click="btnNewWindow_Click"/>
   
    </StackPanel>
</Window>
