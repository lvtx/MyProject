<UserControl x:Class="UseSilverlightDispatcher.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400">

    <Border BorderBrush="Black" BorderThickness="1" CornerRadius="10" Height="180" Width="300">
    <StackPanel Margin="10" >
        <TextBlock Text="Dispatcher.BeginInvoke使用示例" FontSize="15" Margin="5" HorizontalAlignment="Center"/>
        <Button Margin="10" Content="启动一个线程" Name="btnStartThread" Click="btnStartThread_Click"/>
        <Button Margin="10" Content="停止线程" IsEnabled="False" Name="btnStopThread" Click="btnStopThread_Click"/>
        <TextBlock Margin="10" Name="txtInfo"/>
    </StackPanel>
    </Border>
</UserControl>
