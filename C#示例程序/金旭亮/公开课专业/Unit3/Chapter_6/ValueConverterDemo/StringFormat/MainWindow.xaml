<Window x:Class="StringFormat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="格式化字符串" SizeToContent="Height" Width="325">
    <StackPanel Margin="10">
        <TextBlock FontSize="15" Margin="5" Text="{Binding Path=FloatNumber,StringFormat='f2'}"/>
        <TextBlock FontSize="15" Margin="5" Text="{Binding Path=IsValid,StringFormat='数据有效：{0}'}"/>
    </StackPanel>
</Window>
