<Window x:Class="DataBindUseExpandoObject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="绑定到动态对象" Height="200" Width="300">
    <StackPanel Name="rootPanel">
        <TextBlock Text="ExpandoObject对象的Value属性:" FontSize="15" Margin="5" HorizontalAlignment="Center"/>
           
          
        
        <TextBlock  Foreground="Blue" HorizontalAlignment="Center" FontSize="40" Text="{Binding Path=Value}"/>
        <Button Name="btnIncrement" Click="btnIncrement_Click" Content="递增" Margin="5" Width="80" Height="30"/>
    </StackPanel>
</Window>
