<Window x:Class="RunBackgroundWorderInWFP.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="在WPF中使用BackgroundWorker" SizeToContent="WidthAndHeight">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        
        <ProgressBar Name="pgbProcess" Width="200" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Height="20" Margin="5" VerticalAlignment="Center"/>
        <TextBlock Name="txtInfo" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Center"/>
        <Button Name="btnStart" Click="btnStart_Click" Grid.Row="2" Grid.Column="0" Margin="10">开始</Button>
        <Button Name="btnCancel" Click="btnCancel_Click" Grid.Row="2" Grid.Column="1" Margin="10">取消</Button>

    </Grid>
</Window>
