<Window x:Class="SplashScreenForWPF.winSplash"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="winSplash" Height="250" Width="300"   BorderBrush="Black" BorderThickness="1"
        Loaded="Window_Loaded" WindowStyle="None" ResizeMode="NoResize" ShowInTaskbar="False" Topmost="True"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <ImageBrush x:Key="SplashImage" ImageSource="SplashPic.jpg" />
    </Window.Resources>

    <DockPanel Margin="5" Background="{StaticResource SplashImage}">

        <ProgressBar DockPanel.Dock="Bottom" Name="pgbProcess" VerticalAlignment="Bottom"
                     HorizontalAlignment="Stretch" Height="20" />

        <TextBlock Margin="5"  DockPanel.Dock="Bottom" VerticalAlignment="Bottom" 
                   Name="tbInfo" FontSize="15" Text="0%" Foreground="Yellow"/>

    </DockPanel>
</Window>
